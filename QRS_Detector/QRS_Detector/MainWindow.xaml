<Window x:Class="QRS_Detector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dv="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:local="clr-namespace:QRS_Detector"
        mc:Ignorable="d"
        Title="QRS Detector" Height="558" Width="800">

    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="140"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True" Grid.RowSpan="2">
            <Border BorderBrush="Black" BorderThickness="1" Width="206" Margin="10,10,0,140" IsEnabled="False">
                <DataGrid x:Name="dataGrid"  Margin="10,68,10,0" VerticalAlignment="Top" Height="281">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="80"/>
                        <DataGridTextColumn Header="Wartość" Binding="{Binding Value}" Width="96"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </DockPanel>
        <Button x:Name="lSave" Content="Zapisz" HorizontalAlignment="Right" Margin="0,80,180,30" Width="92" Click="Save_Click" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="lLoad" Content="Wczytaj" HorizontalAlignment="Right" Margin="0,22,180,88" Width="92" Click="Load_Click" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="Button2" Content="PRZYCISK1" Click="Button2_Click" Grid.Column="1" HorizontalAlignment="Right" Margin="0,80,42,30" Width="92" Grid.Row="1"/>
        <Button x:Name="Button1" Content="PRZYCISK2" Click="Button1_Click" Grid.Column="1" Margin="0,22,42,88" Grid.Row="1" HorizontalAlignment="Right" Width="92"/>
        <Label x:Name="label" Content="Wczytaj z pliku: " HorizontalContentAlignment="Right" Margin="25,22,0,92" Grid.Row="1" HorizontalAlignment="Left" Width="99"/>
        <Label x:Name="label2" Content="Zapisz do pliku: " HorizontalContentAlignment="Right" Margin="25,0,0,30" Grid.Row="1" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="99"/>
        <TextBox x:Name="tbPath" Margin="124,22,277,88" Grid.Row="1" TextWrapping="Wrap" Text="" IsEnabled="False" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbPath2" Margin="124,80,277,30" Grid.Row="1" TextWrapping="Wrap" Text="" IsEnabled="False" Grid.ColumnSpan="2"/>
        <Label x:Name="lHeader" Content="Informacje" Margin="12,10,5,0" FontSize="15"  Height="68" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <dv:Chart x:Name="Chart1" Title="EKG" Grid.Column="1" Margin="0,10,10,0" FontWeight="Bold"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="12,2,170,10" Grid.Row="1" Grid.ColumnSpan="2"></Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,2,10,10" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Width="158"></Border>
    </Grid>
</Window>
